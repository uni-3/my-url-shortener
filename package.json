{
  "name": "my-url-shortener",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate && cp drizzle/*.sql migrations/",
    "db:push": "drizzle-kit push",
    "db:migrate:local": "wrangler d1 migrations apply url-shortener-development --local",
    "dev:cf": "wrangler pages dev --compatibility-flag=nodejs_compat --d1=DB --kv=URL_CACHE -- pnpm next dev"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sqids": "^0.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260124.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.16",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.0.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18",
    "wrangler": "^4.60.0"
  }
}
